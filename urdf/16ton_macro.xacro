<?xml version="1.0" ?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
<xacro:macro name="coaliron_16ton" params="prefix">

    <!-- link list -->
    <link name="${prefix}base_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://coaliron_16ton_support/meshes/visual/base_link_visual.stl" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://coaliron_16ton_support/meshes/collision/base_link_collision.stl" />
            </geometry>
        </collision>
    </link>

    <!-- upper_mount is the moving part of the press -->
    <link name="${prefix}upper_mount">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://coaliron_16ton_support/meshes/visual/upper_mount_visual.stl"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://coaliron_16ton_support/meshes/collision/upper_mount_collision.stl"/>
            </geometry>
            <material>
                <color rgba="0.5 0.55 0.9 0.8"/>
            </material>
        </collision>
    </link>
    <!-- end of link list -->

    
<!-- joint list -->
<!--base_fc (front-center) to base_link transform-->
<link name="${prefix}base_fc" />
<joint name="${prefix}base_fc_to_base_link" type="fixed">
    <parent link="${prefix}base_fc"/>
    <child link="${prefix}base_link"/>
    <origin xyz="0 0.41046 -0.103124" rpy="0 0 0"/>
</joint>


<!--base_link to press_frame transform-->
<link name="${prefix}press_frame" />
<joint name="${prefix}base_to_press" type="fixed">
    <parent link="${prefix}base_link"/>
    <child link="${prefix}press_frame"/>
    <origin xyz="0.130302 0.001524 1.5113" rpy="0 0 0"/>
</joint>


<!--press_frame to upper_mount transform-->
<joint name="${prefix}moving_joint" type="prismatic">
    <parent link="${prefix}press_frame"/>
    <child link="${prefix}upper_mount"/>
    <origin xyz="0.00127 -0.001524 -0.20955" rpy="0 0 0" />
    <axis xyz="0 0 -1" />
    <limit lower="0" upper="0.28575" effort="100" velocity="10"/>
</joint>


<!--base_link to lower_mount transform-->
<link name="${prefix}lower_mount" />
<joint name="${prefix}base_to_lower_mount" type="fixed">
    <parent link="${prefix}base_link"/>
    <child link="${prefix}lower_mount"/>
    <origin xyz="0.129032 0 1.016" rpy="0 0 0"/>
</joint>


    </xacro:macro>
</robot>

